<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rel1">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_toolbar"
                android:background="@drawable/white_gray_border_bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/calculator"
                        android:src="@drawable/ic_cal"
                        android:layout_alignParentStart="true"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/notification"
                        android:src="@drawable/ic_notifications"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_bottom_stuff4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rel1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@null">

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/gift"
            android:src="@drawable/ic_gift"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offers"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/gift"/>

    </RelativeLayout>

    <View
        android:layout_below="@id/relative_bottom_stuff4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/relative_bottom_stuff5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relative_bottom_stuff4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@null">

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/mail"
            android:src="@drawable/ic_mail"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact with us "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/mail"/>

    </RelativeLayout>
    <View
        android:layout_below="@id/relative_bottom_stuff5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black" />


    <RelativeLayout
        android:id="@+id/relative_bottom_stuff6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relative_bottom_stuff5"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@null">

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/about_app"
            android:src="@drawable/ic_creative"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact with us "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/about_app"/>

    </RelativeLayout>

    <View
        android:layout_below="@id/relative_bottom_stuff6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/relative_bottom_stuff7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relative_bottom_stuff6"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@null">

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/Evaluate"
            android:src="@drawable/ic_star"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact with us "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/Evaluate"/>

    </RelativeLayout>

    <View
        android:layout_below="@id/relative_bottom_stuff7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/relative_bottom_stuff8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relative_bottom_stuff7"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@null">

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/logout"
            android:src="@drawable/ic_logout"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact with us "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/logout"/>

    </RelativeLayout>


    <include
        layout="@layout/bottom_navigation_view"/>

</RelativeLayout>