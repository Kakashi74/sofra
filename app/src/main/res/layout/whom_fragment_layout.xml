<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    >

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8"
        android:text="who_are_we"
        android:id="@+id/ss1"
        android:textColor="@color/black" />


    <android.support.v7.widget.CardView
        android:layout_below="@+id/ss1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_28"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/commentDialogRestaurantClientEtDetailsComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="@dimen/dim_24"
            android:text="text bla bla bla bla bla"
            android:textColor="@color/dblack"
            android:textSize="@dimen/txt_size_16" />
    </android.support.v7.widget.CardView>
    <include
        layout="@layout/bottom_navigation_view"/>
</RelativeLayout>


