<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rel1">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_toolbar"
                android:background="@drawable/white_gray_border_bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/calculator"
                        android:src="@drawable/ic_cal"
                        android:layout_alignParentStart="true"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/notification"
                        android:src="@drawable/ic_notifications"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/normal_tetx"
      android:text="Add Itm Picture"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:textAlignment="center"
      android:layout_below="@id/rel1"
      android:layout_marginTop="15dp"
      android:layout_centerInParent="true"
      />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_shop"
        android:id="@+id/shop_img"
        android:layout_below="@id/normal_tetx"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:id="@+id/relative_bottom_stuff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/shop_img"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/layout_borders">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="الاسم المنتج"
            android:inputType="textNoSuggestions"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_bottom_stuff1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relative_bottom_stuff"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/layout_borders">

        <EditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="وصف مختصر "
            android:inputType="textNoSuggestions"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_bottom_stuff2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relative_bottom_stuff1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/layout_borders">

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="السعر"
            android:inputType="textNoSuggestions"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_bottom_stuff3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relative_bottom_stuff2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/layout_borders">

        <EditText
            android:id="@+id/price_in_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="السعر في العرض"
            android:inputType="textNoSuggestions"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_bottom_stuff4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relative_bottom_stuff3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/layout_borders">

        <EditText
            android:id="@+id/duration_getready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="مده تجهيز الطلب"
            android:inputType="textNoSuggestions"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_btn"
        android:text="Add"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/relative_bottom_stuff4"
        android:background="@drawable/custom_shape_layout"/>

    <include
        layout="@layout/bottom_navigation_view"/>

</RelativeLayout>