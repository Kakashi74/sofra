<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/flayout"
        layout="@layout/top_toolbar_layout"/>

    <android.support.v7.widget.CardView
        android:layout_marginTop="80dp"
        android:layout_below="@id/flayout"
        android:id="@+id/card_food_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_120"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="@dimen/dim_56"
        android:layout_marginEnd="@dimen/dim_24"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="@dimen/dim_28"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dim_8"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_48"
                android:layout_marginEnd="@dimen/dim_8"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/setAdapterNewOfferTxv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chicken Sauce"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/card_food_info"
        android:layout_alignTop="@+id/card_food_info"
        android:layout_alignBottom="@+id/card_food_info"
        android:layout_marginStart="-37dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="@dimen/dim_32">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="@dimen/dim_88"
            android:layout_height="@dimen/dim_88"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/food_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home1"
                android:textSize="@dimen/txt_size_20"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/card_food_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:id="@+id/time_to_get_ready"
        android:text="Duartion : 20 Minutes"
        />

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:id="@+id/view"
        android:background="@color/black"
        android:layout_below="@id/time_to_get_ready"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:id="@+id/special_order"
        android:text="Special Order"
        />

    <EditText
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/j"
        android:textAlignment="center"
        android:background="@drawable/custom_edittext"
        android:hint="Enter Your Order Here"
        android:layout_below="@id/special_order"/>

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:id="@+id/view2"
        android:background="@color/black"
        android:layout_below="@id/j"
        android:layout_marginTop="25dp" />


<LinearLayout
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/view2"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="الكمـية : "/>

    <ImageButton
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"/>


    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/custom_edittext"
        android:textSize="20sp"
        android:text="15"/>


    <ImageButton
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove"/>



</LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_market" />

    <include
        layout="@layout/bottom_navigation_view"/>

</RelativeLayout>